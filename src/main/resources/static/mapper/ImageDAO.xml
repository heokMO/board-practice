<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.study.boardflab.mybatis.dao.ImageDAO">
    <!--    Create    -->
    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        insert into image (origin_name, image.path) values (#{originName}, #{path})
    </insert>

    <!--    Read    -->
    <select id="getIds" resultType="java.lang.Integer">
        select id from image where post_id = #{postId}
    </select>
    <select id="find" resultType="com.study.boardflab.mybatis.vo.ImageVO">
        select id, post_id, origin_name, path from image where id = #{id}
    </select>

    <!--    Update    -->
    <update id="setPost">
        <foreach collection="infos" item="vo" separator=";">
            update image set post_id = #{vo.postId} where id = #{vo.id}
        </foreach>
    </update>

    <!--    Delete    -->
    <delete id="delete">
        delete from image where id = #{id}
    </delete>
</mapper>